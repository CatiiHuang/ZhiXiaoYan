/* pages/module/compare_db/compare_res/compare_res.wxss */
.top_box{
  background-color: #ffe346;
  text-align: center;
  padding-bottom: 7vw;
}
.top_box view{
  padding:0 6vw;
  margin-top: 5vw;
	height: 12vw;
	background-color: #ffe346;
	box-shadow: 0vw 0vw 2vw 0vw 
		rgba(166, 141, 0, 0.33);
	border-radius: 4vw;
  display: inline-block;
  font-size: 5vw;
	line-height: 12vw;
	color: #712d00;
}
.clicked{
  font-size: 4vw;
  color: #712d00;
}
.tab_box{
    
  	background-color: #ffe346;
    padding: 0 8vw;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.tab_box view{
  font-size: 3vw;
  color: #712d00;
  height: 6vw;
  position: relative;
}

.tab_box view text{
  width: 9vw;
  display: inline-block;
  position: absolute;
  bottom: 0;
  left: 0;
	height: 1vw;
	background-color: #712d00;
	border-radius: 0vw
}
.cont_box{
  margin: 9vw 7vw;
  background-color: #ffffff;
	box-shadow: 0vw 0vw 4vw 0vw 
		rgba(166, 166, 166, 0.33);
	border-radius: 2vw;
}
.tr{
  display: flex;
  justify-content: space-between
}
.fsx .td{
  height: 15vw;
  line-height: 15vw;
}
.tr .td{
  width: 33%;
  text-align: center;
  border-right:1px solid #dfdfdf;
  border-bottom: 1px solid #dfdfdf;
  font-size: 3vw;
  height: 13vw;
  line-height: 13vw;
  color: #878787;
}
.th{
  font-size: 4vw!important;
  color: #2b2b2b!important;
}
.tr:last-of-type .td{
  border-bottom: none;
}
.tr .td:last-of-type{
  border-right: none;
}
.row{
  display: flex;
  justify-content: space-evenly;
  
}
.row:first-of-type{
  border-bottom: 1px solid #ccc;
}
.row:first-of-type view{
  height: 15vw;
  text-align: center;
  line-height: 15vw;
  font-size: 4vw;
  

}
.row:last-of-type .col{
    height: 77vw;
    border-bottom:1px solid #ccc;
    display: table;
    width: 49%;
    text-align: center;
}
.row:last-of-type .col text{
   display:table-cell; 
 
  vertical-align: middle;
}