/* pages/module/school_msg.wxss */
.img{
  width: 100vw;
	height: 53vw;
  display: block;
}
.cont_box{
  padding: 6vw 8vw;
}
.cont_box .name_box view:first-of-type{
  font-size: 5.5vw;
  font-weight: 600;
  letter-spacing: 2rpx;
	color: #bf8900;
}
.cont_box .name_box view:last-of-type{
	font-size: 2.1vw;
	color: #bf8900;
  margin-top: 0.5vw;
  margin-bottom: 3vw;
}
.cont_box .name_box text{
  display: block;
  width: 39vw;
	height: 1vw;
	background-color: #f2ce07;
	box-shadow: 0vw 0vw 1vw 0vw 
		rgba(177, 151, 0, 0.33);
	border-radius: 0vw;
}
/* tab */
.tab_box{
  display: flex;
  justify-content: space-between;
}
.tab_item{
  width: 4em;
  display: flex;
  align-items:flex-end;
  height: 4vw;
	font-size: 3vw;
	color: #000000;
}
.ok{
  font-size: 4vw;
	color: #712d00;
  position: relative;
}
.none{
  display: none;
}
.view{
 width: 6vw;
	height: 1vw;
  position: absolute;
  top:6vw;
  left: 0.5vw;
	background-color: #f2ce07;
	box-shadow: 0vw 0vw 0vw 0vw 
		rgba(177, 151, 0, 0.33);
	border-radius: 0vw;
}
.blb view{
  width: 19% !important;
}
/* 招生简章 */
.zsjz_title{
  font-size: 4vw;
	color: #2b2b2b;
  text-align: center;
  margin-top: 1vw;
  margin-bottom: 1.5vw;
}
.zsjz_text{
  font-size: 3vw;
  color: #2b2b2b;
  line-height: 3.5vw;
  text-indent: 2em;
}
.zsjz_item{
  padding: 2.5vw 0;
  border-bottom: 1px solid #bfbfbf; 
}
.zsjz_item view:first-of-type{
  font-size: 3.5vw;
	color: #2b2b2b;
}
.zsjz_item view:last-of-type{
  font-size: 3vw;
  margin-top: 1.2vw;
  margin-bottom: 0.8vw;
	color: #2b2b2b;
}
.zsjz_item text{
  display: block;
  font-size: 2vw;
	color: #2b2b2b;
}
/*专业目录*/
.big_major{
  font-size: 4vw;
	color: #040404;
}
.big_major .majors:first-of-type{
 
}
.orange{
  color: #b34700 !important;
}

.majors text{
  display: inline-block!important;
  font-size: 3vw;
	font-weight: normal;
	color: #2b2b2b;
  margin-left: 2vw;
}
.row{
  display: flex;
  justify-content: space-evenly;
  align-items:center;
  height: 12vw;
  border-bottom: 1px solid #ccc;
}
.th{
  font-size: 3.5vw;
  background-color: #f5d93b;
}
.row view{
  width:24%;
  font-size: 3vw;
  color: #2b2b2b;
  box-sizing: border-box;
  text-align: center;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 3; 
overflow: hidden;
}

