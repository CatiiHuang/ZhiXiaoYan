.djs_top_box{
  position: relative;
  background-color: #ffe346;
}
.djs_box{
  background-repeat:no-repeat;
  background-size:50vw 37vw;
  width: 50vw;
  height: 37vw;
  box-sizing: border-box;
  text-align: center;
  padding-top: 12vw;
  margin: 0 auto;
}
.djs_box view{
  font-size: 12vw;
  font-weight: 600;
	letter-spacing: 0.2vw;
	color: #2d2d2d;
}
.djs_box view text{
	font-size: 5vw;
  vertical-align: bottom;
	color: #2d2d2d;
  font-weight: normal;
}
.djs_top_box image{
  width: 8vw;
	height: 7vw;
  position: absolute;
  bottom: -4px;
  right: 0;
}
.cont_item{
  border-bottom: 1px solid #bfbfbf;
  font-size: 3.8vw;
  padding: 3vw 3vw 3vw 5vw;
}
.cont_item image{
  display: inline-block;
  width: 4vw;
	height: 4vw;
  margin-right:1.5vw; 
  vertical-align: middle;
}
.cont_item view{
  display: inline-block;
}
.cont_item view:last-of-type{
  float: right;
}
.cont_item view:last-of-type text{
 font-size: 2.5vw;
}

/*弹窗*/
.toast-box {
    width: 100%;
    height: 100%;
    opacity: 1;
    position: fixed;
    top: 0px;
    left: 0px;
}
 
.toastbg {
    opacity: 0.2;
    position: absolute;
    width: 100%;
    min-height: 100vh;
}
 
.showToast {
    position: absolute;
    opacity: 1;
    background-color: #fff;
    width: 70%;
    box-shadow: 2vw 2vw 5vw #bfbfbf;
    margin-left: 15%;
    margin-top: 40%;
    padding-bottom:1vw;
}
 
.toast-title {
    padding-left: 5%;
    background-color: #ffe346;
    color: white;
    padding-top: 2vw;
    padding-bottom: 2vw;
    border-top-right-radius: 16rpx;
    border-top-left-radius: 16rpx;
}
