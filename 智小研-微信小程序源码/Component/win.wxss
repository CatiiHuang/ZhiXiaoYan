.plus{
  z-index: 9999;
  height: 90rpx;
  width: 90rpx;
  position: fixed;
  margin: auto;
  left: 0;
  bottom: 54rpx;
  right: 0; 
}
.win{
  max-height: 0;
  min-height: 0;
  position: absolute;
  top: 0;
  border-bottom: 1px solid #bfbfbf; 
   opacity: 0.6;
  z-index: -1;
  overflow: hidden;
  transition:1s;
  background-color: #fdfcfc;
}
.wined{
  border-bottom: 1px solid #bfbfbf; 
  min-height: 100vh;
  z-index: 999;
  transition: 1s;
  opacity: 1;
  background-color: #fdfcfc;
}


